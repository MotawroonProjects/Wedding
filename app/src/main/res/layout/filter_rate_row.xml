<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <data>
       <variable
           name="model"
           type="com.apps.wedding.model.FilterRateModel" />
   </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_margin="5dp"
        android:background="@{model.selected?@drawable/stroke_fill_color2:@drawable/stroke_gray}"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_start_fill"
            />
        <androidx.legacy.widget.Space
            android:layout_width="5dp"
            android:layout_height="0dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@{model.selected?@color/color1:@color/black}"
            android:text="@{model.title}"
            />
    </LinearLayout>
</layout>